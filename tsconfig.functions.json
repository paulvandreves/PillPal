{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "rootDir": "./functions",
    "module": "CommonJS",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "types": ["node", "aws-lambda"],
    "strict": true,
    "outDir": "./dist/functions",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["functions/**/*"],
  "exclude": ["node_modules", "dist"]
}
